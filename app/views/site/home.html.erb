<div class="bannercontainer container-fluid">
	<div class="bannerrow row">
		<div class="mainbanner">
			<img src="/assets/bannerad.png" width="100%" height="400">
		</div>
	</div>
</div>
<div class="navcontainer container-fluid">
	<div class="navrow row">
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<div class="col-sm-4">
				<ul class="nav navbar-nav">
					<li class="active"><a href="#">Sign in <span class="sr-only">(current)</span></a></li>
				</ul>
				</div>
				<div class="col-sm-4">
				<ul class="nav navbar-nav">
					<li class="active searchli">
						<div class="form-group search">
							<%= form_tag(search_path, method: 'get', class: 'navbar-form navbar-left', role: 'search') do %>
							<%= text_field_tag(:q) %>
							<button type="Submit">Search</button>
						</div>
					<% end %>	</li>
				</ul>
			</div>
			<div class="col-sm-4">
				<ul class="nav navbar-nav navbar-right">
					<li><a href="#">Realtors, list a space</a></li>
				</ul>
			</div>
			</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>
	</div>
	<div class="contentcontainer container-fluid">
			<div class="bootcamps row">
			<div class="bootcampheading row text-center"><span class="headinglabel">Check out some bootcamps...</span></div>
			<% @bootcamps.each do |bootcamp| %>
			<% if bootcamp.bootcampimgs != nil %>
			<div class="cityheading text-center col-sm-4"> <%= link_to(bootcamp.name, bootcamp_path(bootcamp))  %><br>
				<%= image_tag(bootcamp.bootcampimgs.first.url, class: "cityIMG") %>
			</div>
			<% end %>
			<% end %>
		</div>
		<div class="cities row">
			<div class="cityheading text-center row"><span class=" headinglabel"> Available Cities</span></div>
				<% @cities.each do |city| %>
			<div class="cityheading text-center col-sm-4"> <%= link_to(city.name, city_path(city))  %> <br>
				<%= image_tag(city.cityimgs.first.url, class: "cityIMG") %>
			</div>
			<% end %>
			<div class="col-sm-4"></div>
		</div>
		<div class="socialmedia row">
			<div class="share col-sm-8">
				<a class="btn btn-social-icon btn-twitter">
					<i class="fa fa-twitter"></i>
				</a>
				<a class="btn btn-social-icon btn-facebook">
					<i class="fa fa-facebook"></i>
				</a>
				<a class="btn btn-social-icon btn-google-plus">
					<i class="fa fa-google-plus"></i>
				</a>
				<a class="btn btn-social-icon btn-linkedin">
					<i class="fa fa-linkedin"></i>
				</a>
			</div>
			<div class="contact col-sm-4">
			</div>
		</div>
	</div>
</div>
</div>