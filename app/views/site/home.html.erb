<div class="bannercontainer container-fluid">
	<div class="bannerrow row">
		<div class="topnav row">
			<div class="col-sm-4 bootcampfeature">
				<a href="#" class="ghostbutton">Bootcamps, want to be featured?</a>
			</div>
			<div class="col-sm-4 about">
				<a href="#" class="ghostbutton">About</a>
			</div>
			<div class="col-sm-4 realtors"><a href="#" class="ghostbutton">Realtors, list your space</a></div>
		</div>
		<div class="mainbanner">
			<%= image_tag("mainbanner.jpg", class: "headingbanner") %>
			<div class="headingwrapper"><h2 class="siteheading text-center">Welcome to BootcampEZ</h2></div>
		</div>
	</div>
</div>
<div class="navcontainer container-fluid">
	<div class="navrow row">
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<div class="col-sm-4">
				<ul class="nav navbar-nav">
					<li><a href="#" class="ghostbutton signin">Sign in <span class="sr-only">(current)</span></a></li>
				</ul>
			</div>
			<div class="col-sm-4">
				<ul class="nav navbar-nav">
					<li class="active searchli">
						<div class="form-group search">
							<%= form_tag(search_path, method: 'get', class: 'navbar-form navbar-left', role: 'search') do %>
							<%= text_field_tag(:q) %>
							<button type="Submit" class="ghostbutton">Search</button>
						</div>
					<% end %>	</li>
				</ul>
			</div>
			<div class="col-sm-4">
				<ul class="nav navbar-nav navbar-right">
					<div class="dropdown">
						<button class="btn btn-default dropdown-toggle ghostbutton" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
						Cities with bootcamps
						<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
							<% @cities.each do |city| %>
							<li role="presentation">
							<b><%= link_to(city.name, city_path(city))  %></b>
							<%= image_tag(city.cityimgs.first.url, class: "cityIMGsmall") %>
							</li>
							<% end %>
						</ul>
					</div>
				</ul>
			</div>
			</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>
	</div>
	<div class="contentcontainer container-fluid">
		<div class="bootcamps row">
			<div class="cityheading row text-center"><span class="heading">Check out some bootcamps...</span></div>
			<% @bootcamps.each do |bootcamp| %>
			<% if bootcamp.bootcampimgs != nil %>
			<div class="cityheading text-center col-sm-4"> <%= link_to(bootcamp.name, bootcamp_path(bootcamp))  %><br>
				<%= image_tag(bootcamp.bootcampimgs.first.url, class: "cityIMG") %>
			</div>
			<% end %>
			<% end %>
		</div>
		<div class="properties row">
			<div class="cityheading text-center row"><span class=" heading"> Popular Properties</span></div>			
			<div class="col-sm-4"></div>
		</div>
		<div class="socialmedia row">
			<div class="share col-sm-8">
				<a class="btn btn-social-icon btn-twitter">
					<i class="fa fa-twitter"></i>
				</a>
				<a class="btn btn-social-icon btn-facebook">
					<i class="fa fa-facebook"></i>
				</a>
				<a class="btn btn-social-icon btn-google-plus">
					<i class="fa fa-google-plus"></i>
				</a>
				<a class="btn btn-social-icon btn-linkedin">
					<i class="fa fa-linkedin"></i>
				</a>
			</div>
			<div class="contact col-sm-4">
			</div>
		</div>
	</div>
</div>
</div>