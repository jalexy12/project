<div class="bg"></div>
<div class="jumbotron text-center">
	<div class="topnavnew row">
		<div class="col-sm-4">
		<%= link_to('Register your bootcamp', new_bootcamp_path, class: "ghostbutton") %></a>
	</div>
	<div class="col-sm-4">
	</div>
	<div class="col-sm-4"><%= link_to( 'Register a property', new_property_path, class: "ghostbutton") %></div>
</div>
<div class="newheading row">
	<h1 style="color: white;">Welcome to BootcampEZ</h1>
	<p class="lead" style="color: white;">You do the learning, we do the rest</p>
</div>
<div class="searchnew row">
	<div class="form-group col-sm-12 text-center">
		<%= form_tag(search_path, method: 'get', class: '', role: 'search') do %>
		<%= text_field_tag(:q) %>
		<%= select_tag(:numrooms, options_for_select([1,2,3,4,5])) %>
		<%= select_tag(:sortby, options_for_select(["Price: Low to high", "Price: High to low", "Relevance"]))%>
		<button type="Submit" class="ghostbutton">Search</button><br>
		<% end %>
	</div>
</div>
<div class="bottomnav row">
	<div class="col-sm-4">
		<% if current_user.present? %>
		<%= link_to('Logout', destroy_user_session_path, method: "Delete", style:"width: 100%;", class: "ghostbutton signin") %>
		<% else %>

		<%= link_to('Login', user_session_path, class: "ghostbutton") %>
		<%= link_to('Register', new_user_registration_path, style:"width: 100%;", class: "ghostbutton signin") %>
		<% end %>
	</div>
	<div class="col-sm-4"></div>
	<div class="col-sm-4">
		<div class="btn-group" style="width: 8em;">
			<button type="button" class="btn dropdown-toggle ghostbutton" data-toggle="dropdown" aria-expanded="false">
			Cities <span class="caret"></span>
			</button>
			<ul class="dropdown-menu" role="menu">
				<% @cities.each do |city| %>
				<li><%= link_to(city.name, city_path(city))  %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
</div>
<div class="container">
<div class="row">
	<% @bootcamps.each do |bootcamp| %>
	<% if bootcamp.approved == true %>
	<div class="col-sm-4 col-xs-6" style="height: 400px;">
		<div class="panel panel-home text-center">
			<div class="panelwrapper">
			<div class="panel-thumbnail" style=""><%= image_tag(bootcamp.bootcampimgs.first.url, class: "img-responsive") %></div>
			<div class="panel-body">
				<p class="lead"><%= link_to(bootcamp.name, bootcamp_path(bootcamp))  %></p>
				<% bootcamp.cities.each do |city| %>
				<%=  city.name %> &nbsp;
				<% end %>
			</div>
		</div>
		</div>
		</div><!--/col-->
		<% end %>
		<% end %>
	</div>
</div>
<div class="socialmedia row">
	<div class="share col-sm-8">
		<a class="btn btn-social-icon btn-twitter">
			<i class="fa fa-twitter"></i>
		</a>
		<a class="btn btn-social-icon btn-facebook">
			<i class="fa fa-facebook"></i>
		</a>
		<a class="btn btn-social-icon btn-google-plus">
			<i class="fa fa-google-plus"></i>
		</a>
		<a class="btn btn-social-icon btn-linkedin">
			<i class="fa fa-linkedin"></i>
		</a>
	</div>
	<div class="contact col-sm-4">
	</div>
</div>
</div>
</div>
</div>